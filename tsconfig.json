  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs", // Use "commonjs" for Node.js compatibility
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["bin/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}